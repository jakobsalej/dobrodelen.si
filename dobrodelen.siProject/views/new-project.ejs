                                        <option>Ostalo</option>
                                        <option>Urgentno!</option>
                                        <option>Prostovoljno</option>
                                        <option>Izobrazba</option>
                                        <option>Bolezen</option>
                                        <option>Družina</option>
                                        <option>Nesreča</option>
                                    </select>
                                </div>

